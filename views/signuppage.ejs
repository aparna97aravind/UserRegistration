<%- include('ejsPartials/header.ejs') %>

<body>
  <form action="/signup" method="POST" class="forms">
    <h4>SIGN UP</h4>
      <label for="username"><b>Username</b></label>
      <input type="text" placeholder="Enter your Name" id="username" name="username" required >
      <br>
      <label for="password"><b>Password</b></label>
      <input type="password" placeholder="Enter your password" id="password" name="password" required >
      <br>
      <label for="email"><b>Email ID</b></label>
      <input type="email" placeholder="Enter your Email ID" id="email" name="email" required >
      <br>
      <button type="submit" name="submit">SUBMIT</button>
  </form>
</body>

